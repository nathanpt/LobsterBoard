{
  "canvas": {
    "width": 1920,
    "height": 1080
  },
  "fontScale": 1.5,
  "widgets": [
    {
      "id": "widget-1",
      "type": "weather",
      "x": 20,
      "y": 20,
      "width": 200,
      "height": 140,
      "properties": {
        "title": "Local Weather",
        "location": "Atlanta",
        "units": "F",
        "refreshInterval": 600,
        "showHeader": true
      }
    },
    {
      "id": "widget-2",
      "type": "weather-multi",
      "x": 240,
      "y": 20,
      "width": 340,
      "height": 200,
      "properties": {
        "title": "World Weather",
        "locations": "New York; London; Tokyo",
        "units": "F",
        "refreshInterval": 600
      }
    },
    {
      "id": "widget-3",
      "type": "clock",
      "x": 20,
      "y": 180,
      "width": 200,
      "height": 140,
      "properties": {
        "title": "Clock",
        "timezone": "local",
        "format24h": false
      }
    },
    {
      "id": "widget-4",
      "type": "world-clock",
      "x": 240,
      "y": 240,
